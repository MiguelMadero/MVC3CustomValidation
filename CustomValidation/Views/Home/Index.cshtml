@model CustomValidation.Controllers.MyModel
@using CustomValidation.Helpers;
@{
	ViewBag.Title = "Form Validation Test Page";
}
@section head {
	<script type="text/javascript" src="/Scripts/jquery.validate.min.js"></script>
	<script type="text/javascript" src="/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

<h1>Form Validation Test Page</h1>

@Html.ValidationSummary("Errors")

@using (Html.BeginForm())
{
	@Html.OutputField(m => m.DigitsWithCustomAttribute)
	@Html.OutputField(m => m.DigitsWithDataTypeAttribute)
	@Html.OutputField(m => m.DigitsAsCustomType)
	@Html.OutputField(m => m.Email)
	@Html.OutputField(m => m.CustomAttributeWithLabel)
	@Html.OutputField(m => m.DataTypeAttributeWithLabel)
	@Html.OutputField(m => m.CustomTypeWithLabel)
	@Html.OutputField(m => m.MyNestedModel.NestedCustomAttribute)
	@Html.OutputField(m => m.MyNestedModel.NestedDataTypeAttribute)
	@Html.OutputField(m => m.MyNestedModel.NestedCustomType)
@:
	<input type="submit" value="Submit" />
}